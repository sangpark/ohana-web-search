<div>
  <div class="right-column">
    <div class="floating-content hide">><
      <span>
        <a class="button-utility button-top" href="#">
          <i class="fa fa-chevron-up"></i>
          Top
        </a>
      </span>
    </div>
    <%= paginate @search.results %>
  </div>
  <div class="left-column">
    <span class="static-content">
      <% unless @search.map_data.empty? %>
        <a class="button-utility button-map-zoom" disabled="disabled" href="#" id="map-size-control">
          <i class="fa fa-refresh fa-spin"></i>
          Loading map...
        </a>
      <% end %>
    </span>
    <p class="search-summary">
      <span>
        <%= page_entries_info @search.results, entry_name: 'result' %>
      </span>
      <span class="map-summary static-content">
        <%= map_summary unless @search.map_data.empty? %>
      </span>
    </p>
  </div>
</div>
