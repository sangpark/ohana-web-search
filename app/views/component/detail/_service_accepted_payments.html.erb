<% if service.accepted_payments.present? %>
  <section class="accepted-payments">
    <h1>
      <%= t('service_fields.accepted_payments') %>
    </h1>
    <ul>
      <% service.accepted_payments.sort.each do |f| %>
        <li>
          <span>
            <%= f %>
          </span>
        </li>
      <% end %>
    </ul>
  </section>
<% end %>
