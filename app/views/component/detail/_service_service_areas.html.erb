<% if service.service_areas.present? %>
  <section class="service-areas">
    <h1>
      <%= t('service_fields.service_areas') %>
    </h1>
    <ul>
      <% service.service_areas.sort.each do |f| %>
        <li>
          <span>
            <%= f %>
          </span>
        </li>
      <% end %>
    </ul>
  </section>
<% end %>
